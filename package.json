{
  "name": "achiever",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "backend": "cd achiever-api && npm run dev",
    "frontend": "http-server docs -p 8080 -c-1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "build:css": "cleancss -o docs/css/style.min.css docs/css/style.css && cleancss -o docs/css/game.min.css docs/css/game.css && cleancss -o docs/css/guide.min.css docs/css/guide.css",
    "build:css:watch": "npm run build:css && echo 'CSS minified. Run again after making changes.'",
    "build:css:dev": "nodemon --watch docs/css --ext css --exec 'npm run build:css'",
    "prepare": "husky"
  },
  "lint-staged": {
    "docs/css/*.css": [
      "npm run build:css",
      "git add docs/css/*.min.css"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/avantgardian/Achiever.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/avantgardian/Achiever/issues"
  },
  "homepage": "https://github.com/avantgardian/Achiever#readme",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@eslint/json": "^0.13.2",
    "@playwright/test": "^1.56.0",
    "@types/node": "^24.7.0",
    "clean-css-cli": "^5.6.3",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "nodemon": "^3.1.10",
    "typescript-eslint": "^8.46.1",
    "vitest": "^3.2.4"
  }
}
